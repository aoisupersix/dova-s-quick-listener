  "bugs": {
    "url": "https://github.com/aoisupersix/dova-s-quick-listener/issues"
  },
  "homepage": "https://github.com/aoisupersix/dova-s-quick-listener#readme",
  "devDependencies": {
    "@types/chrome": "0.0.296",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "copy-webpack-plugin": "^11.0.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "mv3-hot-reload": "^0.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
