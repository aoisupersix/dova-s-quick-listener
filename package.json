  "version": "0.0.2",
  "description": "Chrome extension to simplify playback of DOVA-SYNDROME music materials.",
  "main": "index.js",
  "scripts": {
    "watch:src": "webpack --config webpack/webpack.dev.js --watch",
    "watch:dist": "mv3-hot-reload",
    "start": "npm-run-all --parallel watch:*",
    "build": "webpack --config webpack/webpack.prod.js",
    "test": "jest",
    "lint": "eslint src",
    "clean": "rimraf dist",
    "bumpup": "bash ./scripts/bumpup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aoisupersix/dova-s-quick-listener.git"
  },
